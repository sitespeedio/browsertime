{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "plugins": ["prettier"],
  "extends": "eslint:recommended",
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ],
    "no-extra-semi": "off",
    "no-mixed-spaces-and-tabs": "off",
    "no-unexpected-multiline": "off",
    "no-return-await": "error",
    "require-atomic-updates": "off"
  }
}
